<p id="notice"><%= notice %></p>

<div id = "indent">
  <h1>MindMinder</h1>

  <table id="sortable" class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <!-- <th>Order</th>
        <th>ID</th> -->
        <th>Due on</th>
        <th>Complete</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
          <tr data-item-id=<%= "#{task.id}" %> class="item">
            <td><%= task.description %></td>
            <!-- <td><%= task.row_order %></td>
            <td><%= task.id %></td> -->
            <td><%= task.due_on %></td>
            <td> <%= form_for task, :remote => true do |f| %>
              <%= f.check_box :complete, :class => 'submittable' %>
              <% end %>
              </td>
            <td><%= link_to 'Show', task_path(task), :class => 'btn btn-default pull-right' %></td>
            <td><%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-default pull-right' %></td>
            <td><%= link_to 'Destroy', task, :class => 'btn btn-default pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </tbody>
  </table>


  <br>

  <%= link_to 'New Task', new_task_path %>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table id="sortable">
  <thead>
    <tr>
      <th>Description</th>
      <th>Order</th>
      <th>Due on</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr data-item-id=<%= "#{task.id}" %> class="item">
        <td><%= task.description %></td>
        <td><%= task.order %></td>
        <td><%= task.due_on %></td>
        <td><%= task.complete %></td>
        <td><%= link_to 'Show', task_path(task), :class => 'btn btn-default pull-right' %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

